<% round_number = 1 %>
<% until round_number == @competition.number_of_players %>
<div class="container">
<div class=row class="col-xs-3">
<h4>Round: <%= round_number %></h4>
<% @competition.matches.where(round: round_number).each do |match| %>

<ul>
  <li><%= match.players.first.first_name if match.players.first %> vs. <%= match.players.last.first_name if match.players.last != match.players.first %></li>
  </ul>

<% end %>
  </div>
  </div>
<% round_number += 1 %>
<% end %>
