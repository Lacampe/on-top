<div class="col-md-8 col-md-offset-2">
  <div class="col-md-12">
    <%= @activities.each do |activity| %>
      <div class="activity-card" style="background-color: white; margin: 15px;">
        <%= link_to activity.owner.full_name, activity.owner if activity.owner %>
        created the competition:
        <% if activity.trackable %>
          <%= link_to activity.trackable.name, activity.trackable %>
        <% end %> -
        <%= timeago_tag activity.created_at, nojs: true, limit: 100.days.ago %>
      </div>
    <% end %>
  </div>
</div>
