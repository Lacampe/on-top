<h1>News Feed</h1>

<% @activities.each do |activity| %>
  <div class="activity">
    <%= link_to activity.owner.full_name, activity.owner if activity.owner %>
    created the competitition
    <% if activity.trackable %>
      <%= link_to activity.trackable.name, activity.trackable %>
    <% end %> - <%= timeago_tag activity.created_at, nojs: true, limit: 100.days.ago %>


  </div>
<% end %>
