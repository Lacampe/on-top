<li>
  <div class="message">
    <div class="message-block">
      <div class="message-user">
        <span class="text-muted"><%= message.user.first_name + " " + message.user.last_name%> <br> <%= message.timestamp%>
           <% if DateTime.now.to_date != message.created_at.to_date %>
           <%= " " + message.daystamp   %>
           <% elsif DateTime.now.to_date - 1 == message.created_at.to_date %>
           <%= " yesterday" %>
           <% end %>
           </span><br>
      </div>
      <div class="message-bubble">
        <%= message.body %>
      </div>
    </div>
  </div>
</li>

