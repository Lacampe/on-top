<%= simple_form_for([@competition, @message], remote: true) do |form| %>
  <%= form.input :body, label: false, placeholder: "Nice game dude!" %>
  <%= form.button :submit, id: "message-btn", class: "hidden" %>
<% end %>

<% content_for(:after_js) do %>
<script>
  $('#message-btn').click(function(){
    $('#new_message').submit(),
    $('#message_body').val('');
  }),
  $('#message_body').keyup(function (e) {
  if (e.which == 13) {
    $('#new_message').submit(),
    $('#message_body').val('');
  }
});
</script>
<% end %>
